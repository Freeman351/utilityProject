	<modelVersion>4.0.0</modelVersion>
  <groupId>com.freeman.jasper.report</groupId>
  <artifactId>pdf</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>jar</packaging>
	<url>http://maven.apache.org</url>
	
